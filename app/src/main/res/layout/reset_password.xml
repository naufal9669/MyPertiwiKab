<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <!-- ============ MAIN CONTENT ============ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubah Password Anda"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#0A1F44"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etPassBaru"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Masukkan password baru"
                android:padding="12dp"
                android:drawableEnd="@drawable/ic_eye" />

            <EditText
                android:id="@+id/etKonfirmasi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Konfirmasi password baru"
                android:padding="12dp"
                android:drawableEnd="@drawable/ic_eye_hide"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnKirim"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Kirim"
                android:backgroundTint="#0A64FF"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginTop="30dp" />
        </LinearLayout>
    </ScrollView>

    <!-- ============ POP-UP PASSWORD BERHASIL ============ -->
    <LinearLayout
        android:id="@+id/popupSuccess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="32dp"
        android:background="#80000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_dialog">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_success" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password berhasil diubah!"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#0A1F44"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anda sekarang dapat masuk password baru Anda."
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_marginTop="4dp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnOkDone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="OK"
                android:backgroundTint="#0A64FF"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
