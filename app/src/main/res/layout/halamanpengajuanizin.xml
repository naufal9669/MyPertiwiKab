<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/bg_gradient"
        android:padding="20dp"
        tools:context=".PengajuanIzinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tombol Kembali dan Judul -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Kembali"
                app:tint="#000000"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pengajuan izin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Input tanggal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/tanggal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textTanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih Tanggal"
                android:textColor="#888888"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/btnPilihTanggal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:contentDescription="Pilih tanggal" />

        </LinearLayout>

        <!-- Jenis izin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Jenis izin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerJenisIzin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_spinner_kotak"
            android:entries="@array/arraysizin"
            android:paddingHorizontal="16dp" />

        <!-- Deskripsi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Deskripsi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editTextDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input"
            android:gravity="top|start"
            android:hint="Alasan izin"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:inputType="textMultiLine" />

        <!-- Tombol Ajukan Izin -->
        <Button
            android:id="@+id/buttonajukanIzin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#001F54"
            android:text="Ajukan izin"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
