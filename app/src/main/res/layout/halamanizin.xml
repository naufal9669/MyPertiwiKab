<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tombol Back -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Kembali"
            android:layout_marginBottom="12dp" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengajuan izin"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#0A1F44"
            android:layout_marginBottom="28dp" />

        <!-- Label Tanggal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#0A1F44"
            android:layout_marginBottom="8dp" />

        <!-- Pilih Tanggal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_input"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pilih Tanggal"
                android:textColor="#555555"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/btnPilihTanggal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:contentDescription="Pilih tanggal" />
        </LinearLayout>

        <!-- Label Jenis Izin -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis izin"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#0A1F44"
            android:layout_marginBottom="8dp" />

        <!-- Dropdown Jenis Izin -->
        <Spinner
            android:id="@+id/spinnerJenisIzin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_input"
            android:spinnerMode="dropdown"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Label Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#0A1F44"
            android:layout_marginBottom="8dp" />

        <!-- Input Deskripsi -->
        <EditText
            android:id="@+id/etDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_card_input"
            android:gravity="start|top"
            android:hint="Alasan izin"
            android:padding="12dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Ajukan -->
        <Button
            android:id="@+id/btnAjukanIzin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajukan izin"
            android:backgroundTint="#001F54"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
