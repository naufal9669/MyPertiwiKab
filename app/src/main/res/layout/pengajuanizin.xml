<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pengajuan Izin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Izin"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/textTanggal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Pilih Tanggal"
                android:textColor="#555555"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/btnPilihTanggal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_calendar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:contentDescription="Kalender"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Izin"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinnerJenisIzin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_spinner_kotak"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alasan"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/editTextDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_input"
            android:gravity="top|start"
            android:hint="Tulis alasan..."
            android:padding="10dp"
            android:textColor="#000000"
            android:inputType="textMultiLine"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/buttonajukanIzin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Ajukan Izin"
            android:backgroundTint="#001F54"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>