<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Judul -->
        <TextView
            android:id="@+id/tvDashboardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0A1F44"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center" />

        <!-- Kartu Profil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/teacher"
                android:layout_marginEnd="16dp"
                android:contentDescription="Icon Guru" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ibu. Amelia S.pd"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#0A1F44" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guru Kelas B1"
                    android:textSize="14sp"
                    android:textColor="#555555" />
            </LinearLayout>
        </LinearLayout>

        <!-- Ringkasan Absensi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ringkasan Absensi"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0A1F44"
            android:layout_marginBottom="16dp"
            android:layout_gravity="start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Absensi Datang -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card_small"
                android:padding="20dp"
                android:gravity="center"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absensi Datang"
                    android:textSize="14sp"
                    android:textColor="#0A1F44"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#0A1F44" />
            </LinearLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Absensi Pulang -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card_small"
                android:padding="20dp"
                android:gravity="center"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absensi Pulang"
                    android:textSize="14sp"
                    android:textColor="#0A1F44"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95%"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#0A1F44" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tombol -->

    </LinearLayout>
</ScrollView>
